<%= form_for(@exam) do |f| %>

  <% if @exam.errors.any? %>
    <% @exam.errors.full_messages.each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  <% end %>

  <div class="mb-3">
    <%= f.label :Имя, class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control form-control-lg' %>
  </div>

  <div class="mb-3">
    <%= f.label :Отчество, class: 'form-label' %>
    <%= f.text_field :middle_name, class: 'form-control form-control-lg' %>
  </div>

  <div class="mb-3">
    <%= f.label :Фамилия, class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control form-control-lg' %>
  </div>

  <div class="mb-3">
    <%= f.label :Предмет, class: 'form-label' %>
    <%= f.text_field :subject, class: 'form-control form-control-lg' %>
  </div>

  <div class="mb-3">
    <%= f.label :Дата, class: 'form-label' %>
    <%= f.text_field :date, class: 'form-control form-control-lg' %>
  </div>

  <div class="mb-3 mt-4">
    <%= f.submit I18n.t('.submit_button'), class: 'btn btn-success' %>
    <%= link_to I18n.t('.back_button'), :back, class: 'btn btn-dark' %>
  </div>
<% end %>
