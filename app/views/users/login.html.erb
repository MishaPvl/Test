<% provide :page_title, I18n.t('.title') %>

<h1 class="mb-4"><%= I18n.t('.title') %></h1>

<%= form_with url: auth_user_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email, I18n.t('.form.email') %>
    </div>

    <div class="col-sm-7">
      <%= f.email_field :email, value: params[:email], class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password, I18n.t('.form.password') %>
    </div>

    <div class="col-sm-7">
      <%= f.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit I18n.t('.form.submit'), class: 'btn btn-primary btn-lg' %>
<% end %>