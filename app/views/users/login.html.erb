<% provide :page_title, I18n.t('.title') %>

<h1 class="mb-4"><%= I18n.t('.sign_in_form.title') %></h1>

<%= form_with url: auth_user_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email, I18n.t('.sign_in_form.email') %>
    </div>

    <div class="col-sm-7">
      <%= f.email_field :email, placeholder: I18n.t('.sign_in_form.email'), value: params[:email], class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password, I18n.t('.sign_in_form.password') %>
    </div>

    <div class="col-sm-7">
      <%= f.password_field :password, placeholder: I18n.t('.sign_in_form.password'), class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit I18n.t('.sign_in_form.sign_in'), class: 'btn btn-primary btn-lg mb-4' %>
<% end %>

<th scope="row">Нет аккаунта? <%= link_to I18n.t('.sign_in_form.sign_up'), new_user_path %></th>