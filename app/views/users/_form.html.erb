
<%= render 'shared/errors', object: @user %>
<%= form_with model: @user do |f| %>
  <div class="mb-3 row">
<div class="col-sm-2 col-form-label">
  <%= f.label :email, I18n.t('.sign_up_form.email') %>
    </div>

    <div class="col-sm-10">
  <%= f.email_field :email,  placeholder: 'E-mail', class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
  <div class="col-sm-2 col-form-label">
<%= f.label :name, I18n.t('.sign_up_form.name') %>
    </div>

    <div class="col-sm-10">
<%= f.text_field :name, placeholder: I18n.t('.sign_up_form.name'), class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
<div class="col-sm-2 col-form-label">
<%= f.label :password, I18n.t('.sign_up_form.password') %>
    </div>

    <div class="col-sm-10">
<%= f.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
<div class="col-sm-2 col-form-label">
<%= f.label :password_confirmation, I18n.t('.sign_up_form.password_confirmation') %>
    </div>

    <div class="col-sm-10">
<%= f.password_field :password_confirmation, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit I18n.t('.sign_up_form.sign_up'), class: 'btn btn-primary btn-lg' %>
<% end %>